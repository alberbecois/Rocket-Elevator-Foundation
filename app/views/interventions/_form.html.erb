<%= form_with(model: @intervention, local: true) do |form| %>
  <% if @intervention.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@intervention.errors.count, "error") %> prohibited this intervention from being saved:</h2>

      <ul>
      <% @intervention.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <div class="container">
      <div class="card card-default">
        <div class="card-heading card-heading-transparent">
          <h2 class="card-title bold">Intervention Details</h2>
        </div>
        <div class="card-block">
          <form>
            <div class="row">
              <span class="ml-20">
                <%= collection_select(:intervention, :customer_id, Customer.order(:company_name), :id, :company_name, {prompt: 'Please select'}, {:id=>'cust-select'} ) %>
                <span id="cust-prompt">Please select a customer</span>
              </span>
            </div>
          </form>
          <div class="actions">
            <%= form.submit %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= javascript_include_tag "interventions.js" %>
<% end %>
